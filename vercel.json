{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "*.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/stream.json",
      "dest": "/stream.json"
    },
    {
      "src": "/api/stream",
      "dest": "/stream.json"
    },
    {
      "src": "/live/(.*)",
      "dest": "/live.html"
    },
    {
      "src": "/vip",
      "dest": "/vip.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
